@model BloggerProUI.Models.Auth.RegisterViewModel
@{
    ViewData["Title"] = "Kayıt Ol";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Q. Studio</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,600;1,400&family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
</head>
<body class="auth-body">
    <div class="auth-container">
        <div class="auth-content register-content">
            <div class="auth-left">
                <div class="auth-logo">Q. Studio</div>
                <div class="auth-subtitle">
                    Kendini ifade et, hikayelerini paylaş ve yaratıcı topluluğumuzun bir parçası ol.
                </div>
                <ul class="auth-features">
                    <li>
                        <i class="fas fa-edit"></i>
                        <span>Ücretsiz hesap</span>
                    </li>
                    <li>
                        <i class="fas fa-cloud-upload-alt"></i>
                        <span>Sınırsız paylaşım</span>
                    </li>
                    <li>
                        <i class="fas fa-heart"></i>
                        <span>Okuyucu etkileşimi</span>
                    </li>
                    <li>
                        <i class="fas fa-shield-alt"></i>
                        <span>Güvenli platform</span>
                    </li>
                </ul>
            </div>
            
            <div class="auth-right">
                <div class="auth-header">
                    <h1 class="auth-title">Hesap Oluştur</h1>
                    <p class="auth-description">Hemen başlayın ve ilk hikayenizi paylaşın</p>
                </div>

                @if (Html.ValidationSummary() != null)
                {
                    <div class="auth-validation-summary">
                        @Html.ValidationSummary()
                    </div>
                }
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="auth-alert danger">
                        @TempData["ErrorMessage"]
                    </div>
                }
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="auth-alert success">
                        @TempData["SuccessMessage"]
                    </div>
                }

                <form asp-action="Register" method="post">
                    <div class="auth-form-group register">
                        <label asp-for="Username" class="auth-form-label">Kullanıcı Adı</label>
                        <div class="auth-input-group">
                            <span class="auth-input-group-text"><i class="fas fa-user"></i></span>
                            <input asp-for="Username" class="auth-form-control" placeholder="Kullanıcı adınızı giriniz" />
                        </div>
                        <span asp-validation-for="Username" class="auth-field-validation-error"></span>
                    </div>

                    <div class="auth-form-group register">
                        <label asp-for="Email" class="auth-form-label">Email</label>
                        <div class="auth-input-group">
                            <span class="auth-input-group-text"><i class="fas fa-envelope"></i></span>
                            <input asp-for="Email" type="email" class="auth-form-control" placeholder="Email adresinizi giriniz" />
                        </div>
                        <span asp-validation-for="Email" class="auth-field-validation-error"></span>
                    </div>

                    <div class="auth-form-group register">
                        <label asp-for="Password" class="auth-form-label">Şifre</label>
                        <div class="auth-input-group">
                            <span class="auth-input-group-text"><i class="fas fa-lock"></i></span>
                            <input asp-for="Password" type="password" class="auth-form-control" placeholder="Şifrenizi giriniz" />
                        </div>
                        <span asp-validation-for="Password" class="auth-field-validation-error"></span>
                    </div>

                    <button type="submit" class="auth-btn">
                        <i class="fas fa-user-plus"></i> Kayıt Ol
                    </button>
                </form>

                <div class="auth-links">
                    <a asp-action="Login">Zaten hesabınız var mı? Giriş Yapın</a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>