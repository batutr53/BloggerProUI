@model BloggerProUI.Models.Footer.FooterUpdateDto

@{
    ViewData["Title"] = "Footer Düzenle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Footer Düzenle</h1>
    <a asp-action="Index" class="btn btn-secondary btn-sm">
        <i class="fas fa-arrow-left fa-sm text-white-50"></i> Geri Dön
    </a>
</div>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Footer Bilgileri</h6>
    </div>
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <input asp-for="Id" type="hidden" />
            
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="SectionTitle" class="control-label"></label>
                        <input asp-for="SectionTitle" class="form-control" placeholder="Bölüm başlığını girin" />
                        <span asp-validation-for="SectionTitle" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="FooterType" class="control-label"></label>
                        <select asp-for="FooterType" class="form-control">
                            <option value="">Footer tipini seçin</option>
                            <option value="section">Bölüm</option>
                            <option value="link">Link</option>
                            <option value="newsletter">E-bülten</option>
                            <option value="copyright">Copyright</option>
                            <option value="social">Sosyal Medya</option>
                        </select>
                        <span asp-validation-for="FooterType" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <textarea asp-for="Content" class="form-control" rows="4" placeholder="İçeriği girin"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="LinkUrl" class="control-label"></label>
                        <input asp-for="LinkUrl" class="form-control" placeholder="Link URL'sini girin" />
                        <span asp-validation-for="LinkUrl" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="LinkText" class="control-label"></label>
                        <input asp-for="LinkText" class="form-control" placeholder="Link metnini girin" />
                        <span asp-validation-for="LinkText" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="SortOrder" class="control-label"></label>
                        <input asp-for="SortOrder" class="form-control" type="number" min="0" />
                        <span asp-validation-for="SortOrder" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="IconClass" class="control-label"></label>
                        <input asp-for="IconClass" class="form-control" placeholder="Icon class'ını girin (örn: fas fa-home)" />
                        <span asp-validation-for="IconClass" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="ParentSection" class="control-label"></label>
                        <input asp-for="ParentSection" class="form-control" placeholder="Parent section'ı girin" />
                        <span asp-validation-for="ParentSection" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="form-check">
                    <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                    <label asp-for="IsActive" class="form-check-label">
                        Aktif
                    </label>
                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Güncelle
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-times"></i> İptal
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}