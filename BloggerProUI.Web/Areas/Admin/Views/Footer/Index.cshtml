@model List<BloggerProUI.Models.Footer.FooterDto>

@{
    ViewData["Title"] = "Footer Yönetimi";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Footer Yönetimi</h1>
    <div class="d-flex align-items-center">
        <div class="mr-3">
            <div class="custom-control custom-switch">
                <input type="checkbox" class="custom-control-input" id="footerSystemToggle" onchange="toggleFooterSystem(this)">
                <label class="custom-control-label" for="footerSystemToggle">
                    <strong>Dinamik Footer Sistemi</strong>
                </label>
            </div>
            <small class="text-muted">Kapalı olduğunda statik footer gösterilir</small>
        </div>
        <a asp-action="Create" class="btn btn-primary btn-sm">
            <i class="fas fa-plus fa-sm text-white-50"></i> Yeni Footer Ekle
        </a>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Footer Listesi</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Sıra</th>
                        <th>Bölüm Başlığı</th>
                        <th>İçerik</th>
                        <th>Tip</th>
                        <th>Parent Section</th>
                        <th>Durum</th>
                        <th>Oluşturulma Tarihi</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.SortOrder</td>
                            <td>@item.SectionTitle</td>
                            <td>
                                @if (item.Content.Length > 50)
                                {
                                    @(item.Content.Substring(0, 50) + "...")
                                }
                                else
                                {
                                    @item.Content
                                }
                            </td>
                            <td>
                                <span class="badge badge-info">@item.FooterType</span>
                            </td>
                            <td>@(item.ParentSection ?? "-")</td>
                            <td>
                                @if (item.IsActive)
                                {
                                    <span class="badge badge-success">Aktif</span>
                                }
                                else
                                {
                                    <span class="badge badge-secondary">Pasif</span>
                                }
                            </td>
                            <td>@item.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form asp-action="ToggleStatus" asp-route-id="@item.Id" method="post" style="display: inline;">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm @(item.IsActive ? "btn-outline-warning" : "btn-outline-success")" 
                                                onclick="return confirm('@(item.IsActive ? "Bu footer'ı pasif yapmak istediğinizden emin misiniz?" : "Bu footer'ı aktif yapmak istediğinizden emin misiniz?")')">
                                            <i class="fas @(item.IsActive ? "fa-eye-slash" : "fa-eye")"></i>
                                        </button>
                                    </form>
                                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display: inline;">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-outline-danger" 
                                                onclick="return confirm('Bu footer'ı silmek istediğinizden emin misiniz?')">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#dataTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Turkish.json"
                },
                "order": [[ 0, "asc" ]]
            });
            
            // Load footer system status
            loadFooterSystemStatus();
        });
        
        function loadFooterSystemStatus() {
            const status = localStorage.getItem('footerSystemEnabled');
            const toggle = document.getElementById('footerSystemToggle');
            
            if (status === null || status === 'true') {
                toggle.checked = true;
            } else {
                toggle.checked = false;
            }
        }
        
        function toggleFooterSystem(toggle) {
            const isEnabled = toggle.checked;
            localStorage.setItem('footerSystemEnabled', isEnabled.toString());
            
            // Show confirmation message
            if (isEnabled) {
                showAlert('success', 'Dinamik footer sistemi aktif edildi. Artık admin panelden girilen veriler gösterilecek.');
            } else {
                showAlert('warning', 'Dinamik footer sistemi pasif edildi. Artık statik footer gösterilecek.');
            }
        }
        
        function showAlert(type, message) {
            const alertHtml = `
                <div class="alert alert-${type} alert-dismissible fade show" role="alert">
                    ${message}
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            `;
            
            // Insert alert after the header
            $('.d-sm-flex').after(alertHtml);
            
            // Auto dismiss after 5 seconds
            setTimeout(() => {
                $('.alert').alert('close');
            }, 5000);
        }
    </script>
}