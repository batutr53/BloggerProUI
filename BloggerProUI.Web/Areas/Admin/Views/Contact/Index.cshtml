@model BloggerProUI.Models.Pagination.PaginatedResultDto<BloggerProUI.Models.Contact.ContactListDto>
@{
    ViewData["Title"] = "İletişim Mesajları";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">İletişim Mesajları</h1>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <div class="row">
            <div class="col-md-6">
                <h6 class="m-0 font-weight-bold text-primary">Mesaj Listesi</h6>
            </div>
            <div class="col-md-6">
                <form method="get" class="d-flex">
                    <input type="hidden" name="page" value="1" />
                    <input type="hidden" name="pageSize" value="@ViewBag.PageSize" />
                    <select name="isReplied" class="form-control mr-2" onchange="this.form.submit()">
                        <option value="">Tümü</option>
                        @if (ViewBag.IsReplied?.ToString() == "True")
                        {
                            <option value="true" selected>Yanıtlananlar</option>
                        }
                        else
                        {
                            <option value="true">Yanıtlananlar</option>
                        }
                        @if (ViewBag.IsReplied?.ToString() == "False")
                        {
                            <option value="false" selected>Yanıtlanmayanlar</option>
                        }
                        else
                        {
                            <option value="false">Yanıtlanmayanlar</option>
                        }
                    </select>
                </form>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-striped" width="100%" cellspacing="0">
                <thead class="thead-dark">
                    <tr>
                        <th>Ad Soyad</th>
                        <th>Email</th>
                        <th>Konu</th>
                        <th>Durum</th>
                        <th>Tarih</th>
                        <th style="width: 200px;">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Items.Any())
                    {
                        @foreach (var contact in Model.Items)
                        {
                            <tr>
                                <td>@contact.Name</td>
                                <td>@contact.Email</td>
                                <td>@contact.Subject</td>
                                <td>
                                    @if (contact.IsReplied)
                                    {
                                        <span class="badge badge-success">Yanıtlandı</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-warning">Bekliyor</span>
                                    }
                                </td>
                                <td>@contact.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                                <td class="text-center">
                                    <a asp-action="Details" asp-route-id="@contact.Id" class="btn btn-sm btn-info mr-1" title="Detaylar">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Reply" asp-route-id="@contact.Id" class="btn btn-sm btn-primary mr-1" title="Yanıtla">
                                        <i class="fas fa-reply"></i>
                                    </a>
                                    @if (!contact.IsReplied)
                                    {
                                        <button class="btn btn-success btn-sm mr-1" onclick="markAsReplied('@contact.Id')" title="Yanıtlandı olarak işaretle">
                                            <i class="fas fa-check"></i>
                                        </button>
                                    }
                                    <button class="btn btn-danger btn-sm" onclick="deleteContact('@contact.Id')" title="Sil">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center">Henüz mesaj bulunmamaktadır.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
        @if (Model != null && Model.TotalPages > 1)
        {
            <nav aria-label="Sayfalama">
                <ul class="pagination justify-content-center">
                    @if (Model.HasPreviousPage)
                    {
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action("Index", new { page = Model.PageNumber - 1, pageSize = Model.PageSize, isReplied = ViewBag.IsReplied })">Önceki</a>
                        </li>
                    }
                    
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                            <a class="page-link" href="@Url.Action("Index", new { page = i, pageSize = Model.PageSize, isReplied = ViewBag.IsReplied })">@i</a>
                        </li>
                    }
                    
                    @if (Model.HasNextPage)
                    {
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action("Index", new { page = Model.PageNumber + 1, pageSize = Model.PageSize, isReplied = ViewBag.IsReplied })">Sonraki</a>
                        </li>
                    }
                </ul>
            </nav>
        }
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function markAsReplied(id) {
            Swal.fire({
                title: 'Emin misiniz?',
                text: "Bu mesaj yanıtlandı olarak işaretlenecek!",
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#28a745',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Evet, işaretle!',
                cancelButtonText: 'Vazgeç'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '@Url.Action("MarkAsReplied", "Contact")',
                        type: 'POST',
                        data: { id: id },
                        success: function (response) {
                            if (response.success) {
                                Swal.fire(
                                    'Başarılı!',
                                    response.message,
                                    'success'
                                ).then(() => {
                                    location.reload();
                                });
                            } else {
                                Swal.fire(
                                    'Hata!',
                                    response.message || 'İşlem sırasında bir hata oluştu.',
                                    'error'
                                );
                            }
                        },
                        error: function () {
                            Swal.fire(
                                'Hata!',
                                'Sunucuya ulaşılamadı.',
                                'error'
                            );
                        }
                    });
                }
            });
        }

        function deleteContact(id) {
            Swal.fire({
                title: 'Emin misiniz?',
                text: "Bu mesaj kalıcı olarak silinecek!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Evet, sil!',
                cancelButtonText: 'Vazgeç'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '@Url.Action("Delete", "Contact")',
                        type: 'POST',
                        data: { id: id },
                        success: function (response) {
                            if (response.success) {
                                Swal.fire(
                                    'Silindi!',
                                    response.message,
                                    'success'
                                ).then(() => {
                                    location.reload();
                                });
                            } else {
                                Swal.fire(
                                    'Hata!',
                                    response.message || 'Silme işlemi sırasında bir hata oluştu.',
                                    'error'
                                );
                            }
                        },
                        error: function () {
                            Swal.fire(
                                'Hata!',
                                'Sunucuya ulaşılamadı.',
                                'error'
                            );
                        }
                    });
                }
            });
        }
    </script>
}