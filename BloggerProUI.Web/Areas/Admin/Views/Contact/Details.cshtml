@model BloggerProUI.Models.Contact.ContactListDto
@{
    ViewData["Title"] = "Mesaj Detayı";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Mesaj Detayı</h1>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Geri Dön
    </a>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Mesaj Bilgileri</h6>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>Ad Soyad:</strong>
                        <p>@Model.Name</p>
                    </div>
                    <div class="col-md-6">
                        <strong>Email:</strong>
                        <p><a href="mailto:@Model.Email">@Model.Email</a></p>
                    </div>
                </div>
                
                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>Konu:</strong>
                        <p>@Model.Subject</p>
                    </div>
                    <div class="col-md-6">
                        <strong>Durum:</strong>
                        <p>
                            @if (Model.IsReplied)
                            {
                                <span class="badge badge-success">Yanıtlandı</span>
                            }
                            else
                            {
                                <span class="badge badge-warning">Bekliyor</span>
                            }
                        </p>
                    </div>
                </div>
                
                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>Gönderilme Tarihi:</strong>
                        <p>@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</p>
                    </div>
                    @if (Model.IsReplied && Model.RepliedAt.HasValue)
                    {
                        <div class="col-md-6">
                            <strong>Yanıtlanma Tarihi:</strong>
                            <p>@Model.RepliedAt.Value.ToString("dd.MM.yyyy HH:mm")</p>
                        </div>
                    }
                </div>
                
                <div class="mb-3">
                    <strong>Mesaj:</strong>
                    <div class="border p-3 mt-2 bg-light">
                        @Html.Raw(Model.Message.Replace("\n", "<br />"))
                    </div>
                </div>
                
                @if (!string.IsNullOrEmpty(Model.AdminReply))
                {
                    <div class="mb-3">
                        <strong>Admin Yanıtı:</strong>
                        <div class="border p-3 mt-2 bg-info text-white">
                            @Html.Raw(Model.AdminReply.Replace("\n", "<br />"))
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">İşlemler</h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-action="Reply" asp-route-id="@Model.Id" class="btn btn-primary btn-block">
                        <i class="fas fa-reply"></i> Yanıtla
                    </a>
                    
                    @if (!Model.IsReplied)
                    {
                        <button class="btn btn-success btn-block" onclick="markAsReplied('@Model.Id')">
                            <i class="fas fa-check"></i> Yanıtlandı Olarak İşaretle
                        </button>
                    }
                    
                    <button class="btn btn-danger btn-block" onclick="deleteContact('@Model.Id')">
                        <i class="fas fa-trash"></i> Sil
                    </button>
                </div>
            </div>
        </div>
        
        @if (!string.IsNullOrEmpty(Model.IpAddress) || !string.IsNullOrEmpty(Model.UserAgent))
        {
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Teknik Bilgiler</h6>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.IpAddress))
                    {
                        <div class="mb-2">
                            <strong>IP Adresi:</strong>
                            <p class="text-muted">@Model.IpAddress</p>
                        </div>
                    }
                    
                    @if (!string.IsNullOrEmpty(Model.UserAgent))
                    {
                        <div class="mb-2">
                            <strong>Tarayıcı:</strong>
                            <p class="text-muted small">@Model.UserAgent</p>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function markAsReplied(id) {
            Swal.fire({
                title: 'Emin misiniz?',
                text: "Bu mesaj yanıtlandı olarak işaretlenecek!",
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#28a745',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Evet, işaretle!',
                cancelButtonText: 'Vazgeç'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '@Url.Action("MarkAsReplied", "Contact")',
                        type: 'POST',
                        data: { id: id },
                        success: function (response) {
                            if (response.success) {
                                Swal.fire(
                                    'Başarılı!',
                                    response.message,
                                    'success'
                                ).then(() => {
                                    location.reload();
                                });
                            } else {
                                Swal.fire(
                                    'Hata!',
                                    response.message || 'İşlem sırasında bir hata oluştu.',
                                    'error'
                                );
                            }
                        },
                        error: function () {
                            Swal.fire(
                                'Hata!',
                                'Sunucuya ulaşılamadı.',
                                'error'
                            );
                        }
                    });
                }
            });
        }

        function deleteContact(id) {
            Swal.fire({
                title: 'Emin misiniz?',
                text: "Bu mesaj kalıcı olarak silinecek!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Evet, sil!',
                cancelButtonText: 'Vazgeç'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '@Url.Action("Delete", "Contact")',
                        type: 'POST',
                        data: { id: id },
                        success: function (response) {
                            if (response.success) {
                                Swal.fire(
                                    'Silindi!',
                                    response.message,
                                    'success'
                                ).then(() => {
                                    window.location.href = '@Url.Action("Index")';
                                });
                            } else {
                                Swal.fire(
                                    'Hata!',
                                    response.message || 'Silme işlemi sırasında bir hata oluştu.',
                                    'error'
                                );
                            }
                        },
                        error: function () {
                            Swal.fire(
                                'Hata!',
                                'Sunucuya ulaşılamadı.',
                                'error'
                            );
                        }
                    });
                }
            });
        }
    </script>
}