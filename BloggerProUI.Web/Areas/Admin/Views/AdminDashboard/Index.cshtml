@model BloggerProUI.Models.Dashboard.AdminDashboardStatsDto

@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Dashboard</h1>

    <!-- Stat Kartları -->
    <div class="row">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Toplam Kullanıcı</div>
                    <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalUsers</div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Toplam Post</div>
                    <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalPosts</div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Toplam Yorum</div>
                    <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalComments</div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-danger shadow h-100 py-2">
                <div class="card-body">
                    <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">Toplam Beğeni</div>
                    <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalLikes</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Top Beğenilen Postlar -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">En Çok Beğenilen Postlar</h6>
        </div>
        <div class="card-body">
            @if (Model.TopLikedPosts?.Any() == true)
            {
                <div class="table-responsive">
                    <table class="table table-bordered" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Başlık</th>
                                <th>Beğeni</th>
                                <th>Yorum</th>
                                <th>Puan</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var post in Model.TopLikedPosts)
                            {
                                <tr>
                                    <td>@post.Title</td>
                                    <td>@post.LikeCount</td>
                                    <td>@post.CommentCount</td>
                                    <td>@post.AverageRating</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-muted">Hiç beğenilen post yok.</p>
            }
        </div>
    </div>

    <!-- En Aktif Kullanıcılar -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-info">En Aktif Kullanıcılar</h6>
        </div>
        <div class="card-body">
            @if (Model.MostActiveUsers?.Any() == true)
            {
                <ul class="list-group">
                    @foreach (var user in Model.MostActiveUsers)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            @user.UserName
                            <span class="badge badge-primary badge-pill">
                                Post: @user.TotalPosts, Yorum: @user.TotalComments, Puan: @user.TotalRatings
                            </span>
                        </li>
                    }
                </ul>
            }
            else
            {
                <p class="text-muted">Henüz aktif kullanıcı verisi yok.</p>
            }
        </div>
    </div>
</div>
