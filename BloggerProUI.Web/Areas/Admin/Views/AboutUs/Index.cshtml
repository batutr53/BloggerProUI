@model List<BloggerProUI.Models.AboutUs.AboutUsDto>
@{
    ViewData["Title"] = "Hakkımızda Yönetimi";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Hakkımızda Yönetimi</h1>
    <a asp-area="Admin" asp-controller="AboutUs" asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Yeni Ekle
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-striped" width="100%" cellspacing="0">
                <thead class="thead-dark">
                    <tr>
                        <th>Başlık</th>
                        <th>Sıralama</th>
                        <th>Durum</th>
                        <th>Oluşturulma Tarihi</th>
                        <th style="width: 200px;">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model.OrderBy(x => x.SortOrder))
                        {
                            <tr>
                                <td>@item.Title</td>
                                <td>
                                    <span class="badge badge-secondary">@item.SortOrder</span>
                                </td>
                                <td>
                                    @if (item.IsActive)
                                    {
                                        <span class="badge badge-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-danger">Pasif</span>
                                    }
                                </td>
                                <td>@item.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning mr-1" title="Düzenle">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <button class="btn btn-sm @(item.IsActive ? "btn-secondary" : "btn-success") mr-1" 
                                            onclick="toggleStatus('@item.Id')" 
                                            title="@(item.IsActive ? "Pasifleştir" : "Aktifleştir")">
                                        <i class="fas @(item.IsActive ? "fa-eye-slash" : "fa-eye")"></i>
                                    </button>
                                    <button class="btn btn-danger btn-sm" onclick="deleteItem('@item.Id')" title="Sil">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center">Henüz hakkımızda bilgisi bulunmamaktadır.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function toggleStatus(id) {
            $.ajax({
                url: '@Url.Action("ToggleStatus", "AboutUs")',
                type: 'POST',
                data: { id: id },
                success: function (response) {
                    if (response.success) {
                        Swal.fire(
                            'Başarılı!',
                            response.message,
                            'success'
                        ).then(() => {
                            location.reload();
                        });
                    } else {
                        Swal.fire(
                            'Hata!',
                            response.message || 'İşlem sırasında bir hata oluştu.',
                            'error'
                        );
                    }
                },
                error: function () {
                    Swal.fire(
                        'Hata!',
                        'Sunucuya ulaşılamadı.',
                        'error'
                    );
                }
            });
        }

        function deleteItem(id) {
            Swal.fire({
                title: 'Emin misiniz?',
                text: "Bu bilgi kalıcı olarak silinecek!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Evet, sil!',
                cancelButtonText: 'Vazgeç'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '@Url.Action("Delete", "AboutUs")',
                        type: 'POST',
                        data: { id: id },
                        success: function (response) {
                            if (response.success) {
                                Swal.fire(
                                    'Silindi!',
                                    response.message,
                                    'success'
                                ).then(() => {
                                    location.reload();
                                });
                            } else {
                                Swal.fire(
                                    'Hata!',
                                    response.message || 'Silme işlemi sırasında bir hata oluştu.',
                                    'error'
                                );
                            }
                        },
                        error: function () {
                            Swal.fire(
                                'Hata!',
                                'Sunucuya ulaşılamadı.',
                                'error'
                            );
                        }
                    });
                }
            });
        }
    </script>
}