{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch BloggerPro Web",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/BloggerProUI.Web/bin/Debug/net9.0/BloggerProUI.Web.dll",
            "args": [],
            "cwd": "${workspaceFolder}/BloggerProUI.Web",
            "console": "internalConsole",
            "stopAtEntry": false,
            "launchBrowser": {
                "enabled": true,
                "args": "${auto-detect-url}",
                "windows": {
                    "command": "cmd.exe",
                    "args": "/C start ${auto-detect-url}"
                },
                "osx": {
                    "command": "open"
                },
                "linux": {
                    "command": "xdg-open"
                }
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "https://localhost:7001;http://localhost:7000"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/BloggerProUI.Web/Views"
            },
            "requireExactSource": false
        },
        {
            "name": "Attach to BloggerPro Web",
            "type": "coreclr",
            "request": "attach",
            "processName": "BloggerProUI.Web"
        }
    ]
}
