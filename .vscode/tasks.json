{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"command": "dotnet",
			"type": "process",
			"args": [
				"build",
				"${workspaceFolder}/BloggerProUI.Web/BloggerProUI.Web.csproj",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "Run BloggerPro Web Application",
			"type": "shell",
			"command": "dotnet watch run --urls \"https://localhost:7001;http://localhost:7000\"",
			"group": "build",
			"isBackground": true,
			"problemMatcher": [],
			"options": {
				"cwd": "${workspaceFolder}/BloggerProUI.Web"
			}
		}
	]
}